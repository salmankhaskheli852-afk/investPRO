/**
 * WARNING: These rules are for development purposes only and grant broad access.
 * Any authenticated user can read, write, update, and delete any data.
 * This is NOT secure for a production environment.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Allow any authenticated user to read/write any document.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
