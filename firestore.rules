
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin or an agent.
    // This grants them full access.
    function isAdminOrAgent() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return request.auth != null && 
             (
                request.auth.token.email == 'salmankhaskheli885@gmail.com' ||
                request.auth.token.email == 'salmankhaskheli852@gmail.com' ||
                (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (userRole == 'admin' || userRole == 'agent'))
             );
    }

    // Grant ADMINS and AGENTS total and complete access to ALL documents in the database.
    // This rule is placed first to ensure it's evaluated before more specific rules.
    match /{document=**} {
      allow read, write, list: if isAdminOrAgent();
    }
    
    // Helper function to check if the user is authenticated.
    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }
    
    // Rules for non-admin/non-agent users below

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read and update their own profile.
      allow get, update: if isOwner(userId);
      
      // An authenticated user can create their own profile.
      allow create: if isUserAuthenticated();
    }
    
    // Rules for 'investment_plans' for non-admins
    match /investment_plans/{planId} {
        // Any authenticated user can view the investment plans.
        allow read: if isUserAuthenticated();
    }

    // Rules for 'plan_categories' for non-admins
    match /plan_categories/{categoryId} {
        // Any authenticated user can view the investment plan categories.
        allow read: if isUserAuthenticated();
    }
    
    // This rule gives a user full read/write access to their own wallet document.
    match /users/{userId}/wallets/{walletId} {
      allow read, write: if isOwner(userId);
    }

    // This rule allows a user to read, create, and update their own transactions.
    match /users/{userId}/wallets/main/transactions/{transactionId} {
      allow read, create, update: if isOwner(userId);
    }

    // Allow any authenticated user to see available withdrawal methods
    match /withdrawal_methods/{methodId} {
      allow read: if isUserAuthenticated();
    }
    
    // Allow any authenticated user to read admin wallet details for making a deposit
    match /admin_wallets/{walletId} {
        allow read: if isUserAuthenticated();
    }

    // Allow ANYONE (authenticated or not) to read chat settings.
    // This is safe because it's public contact info.
    match /app_config/chat_settings {
      allow get: if true;
    }
  }
}
