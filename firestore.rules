
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the designated admin.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'salmankhaskheli885@gmail.com';
    }

    // Grant ADMIN total and complete access to ALL documents in the database.
    // This rule is placed first to ensure it's evaluated before more specific rules.
    match /{document=**} {
      allow read, write, list: if isAdmin();
    }
    
    // Helper function to check if the user is authenticated.
    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }
    
    // Rules for non-admin users below

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read and update their own profile.
      allow get, update: if isOwner(userId);
      
      // An authenticated user can create their own profile.
      allow create: if isUserAuthenticated();
    }
    
    // Rules for 'investment_plans' for non-admins
    match /investment_plans/{planId} {
        // Any authenticated user can view the investment plans.
        allow read: if isUserAuthenticated();
    }

    // This rule allows a user to read, create, and update their own transactions.
    match /users/{userId}/wallets/main/transactions/{transactionId} {
      allow read, create, update: if isOwner(userId);
    }
    
    // This rule allows a user to create a corresponding transaction in the global collection.
    // Admins can read/write them via the global admin rule.
    match /transactions/{transactionId} {
        allow create: if isUserAuthenticated() && request.resource.data.details.userId == request.auth.uid;
    }

    // Allow any authenticated user to see available withdrawal methods
    match /withdrawal_methods/{methodId} {
      allow read: if isUserAuthenticated();
    }
    
    // Allow any authenticated user to read admin wallet details for making a deposit
    match /admin_wallets/{walletId} {
        allow read: if isUserAuthenticated();
    }

    // Allow any authenticated user to read chat settings for the WhatsApp widget
    match /app_config/chat_settings {
      allow get: if isUserAuthenticated();
    }
  }
}
