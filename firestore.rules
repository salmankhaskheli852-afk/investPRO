
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an authenticated admin.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'salmankhaskheli885@gmail.com';
    }

    // Helper function to check if the user is authenticated.
    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    // Grant ADMIN total and complete access to ALL documents in the database.
    // This rule is placed first to ensure it's evaluated before more specific rules.
    match /{document=**} {
      allow read, write, list: if isAdmin();
    }
    
    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read their own profile.
      allow get: if isOwner(userId);
      
      // An authenticated user can create their own profile.
      allow create: if isUserAuthenticated();
      
      // A user can update their own profile.
      allow update: if isOwner(userId);
    }
    
    // Rules for 'investment_plans'
    match /investment_plans/{planId} {
        // Any authenticated user can view the investment plans.
        allow read: if isUserAuthenticated();
        // Admins can write (already covered by global rule, but kept for clarity)
        allow write: if isAdmin();
    }

    // Rules for user-specific subcollections like wallets and transactions
    match /users/{userId}/{document=**} {
      // A user can only access their own subcollections (wallets, transactions, etc.).
      allow read, write: if isOwner(userId);
    }

    // Rules for the top-level 'transactions' collection for non-admins
    match /transactions/{transactionId} {
        // Admins are already covered. This allows users to read their own transactions if needed,
        // although the app currently reads from the subcollection.
        allow read: if request.auth.uid == resource.data.details.userId;
    }

    // Allow any authenticated user to read chat settings for the WhatsApp widget
    match /app_config/chat_settings {
      allow get: if isUserAuthenticated();
    }
  }
}
